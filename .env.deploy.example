# Backend (PostgreSQL: platform_db + vibehr schema)
DATABASE_URL=postgresql+psycopg://your_db_user:your_db_password@host.docker.internal:5432/platform_db?options=-csearch_path%3Dvibehr
CORS_ORIGINS=http://localhost:3000
APP_NAME=Vibe-HR API
ENVIRONMENT=production
AUTH_TOKEN_SECRET=replace-with-strong-random-secret
AUTH_TOKEN_ALGORITHM=HS256
AUTH_TOKEN_EXPIRES_MIN=480
AUTH_TOKEN_ISSUER=vibe-hr
SEED_ARCHIVE_ENABLED=true
